<div class='row'>
  <div class='col-sm-4 center-block no-float'>
    <h2>Display Creation</h2>
  </div>
</div>
<div class='row'>
  <div class='col-sm-6 center-block no-float'>
    <%= form_for @display do |form|%>
      <div class="form-group">
        <div class="col-sm-8 padded center-block no-float">
          <label>publish?</label>
          yes
          <%= form.radio_button :published?, true %>
          no
          <%= form.radio_button :published?, false %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-8 padded center-block no-float">
          <%= form.submit value: 'update published status', class: 'form-control' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class='row'>
  <div class='col-sm-6 center-block no-float'>
    <%= form_for :display_indices, url: update_indices_path(@display.id), method: :put do |form|%>

      <div class="form-group panel panel-default">
        Please select the contents of Tile in Position #1.
        <div class="col-sm-8 padded uivalidate center-block no-float">
          <%= form.select :position_1, options_from_collection_for_select(@tiles, "id", "href", set_display_index_value(1, @tile_indices)) %>
        </div>
      </div>
      <div class="form-group panel panel-default">
        Please select the contents of Tile in Position #2.
        <div class="col-sm-8 padded uivalidate center-block no-float">
          <%= form.select :position_2, options_from_collection_for_select(@tiles, "id", "href", set_display_index_value(2, @tile_indices)) %>
        </div>
      </div>
      <div class="form-group panel panel-default">
        Please select the contents of Tile in Position #3.
        <div class="col-sm-8 padded uivalidate center-block no-float">
          <%= form.select :position_3, options_from_collection_for_select(@tiles, "id", "href", set_display_index_value(3, @tile_indices)) %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-8 padded center-block no-float">
          <%= form.submit value: 'update tile layout', class: 'form-control' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
